extends layout

block content
    .card.mb-4.text-white.bg-transparent.border-dark
        .card-body.text-center
            img.rounded-circle.mb-3(src=userProfile.avatarUrl width='100' height='100')
            h2 #{userProfile.name}
            if userProfile.email
                p.text-muted #{userProfile.ema<il}
            p Joined: #{userProfile.createdAt.toLocaleDateString()}

    .card.mb-4.text-white.bg-transparent.border-dark
        .card-header
            h5 Minecraft Account
        .card-body
            if minecraftAccount
                .d-flex.align-items-center.mb-3
                    img.rounded-circle.me-3(src=minecraftAccount.AVATAR_URL width='64' height='64')
                    .flex-grow-1
                        strong #{minecraftAccount.MC_USERNAME}
                        if minecraftAccount.MC_UUID
                            small.text-muted (#{minecraftAccount.MC_UUID})
                button#remove-mc-btn.btn.btn-danger(type='button') Remove Account
            else
                p No Minecraft account linked.
            hr
            form#add-mc-form
                .mb-3
                    label.form-label(for='mc-username') Minecraft Username
                    input#mc-username.form-control(type='text' required)
                button.btn.btn-success(type='submit') Link Minecraft Account