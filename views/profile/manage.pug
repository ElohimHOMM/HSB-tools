extends ../layout

block content
  h1 Manage Minecraft Account for #{userProfile.USERNAME}
  if minecraftAccount
    .card.mb-3
      .card-body.d-flex.align-items-center
        img.rounded-circle.me-3(src=minecraftAccount.AVATAR_URL || '/images/default_avatar.png' alt='avatar' width='64' height='64')
        .flex-grow-1
          strong #{minecraftAccount.MC_USERNAME}
          if minecraftAccount.MC_UUID
            small.text-muted (#{minecraftAccount.MC_UUID})
    if isOwner
      button#remove-mc-btn.btn.btn-danger.mt-2(type='button') Remove Account
  else
    p.text-muted No Minecraft account linked.
    if isOwner
      form#add-mc-form
        .mb-3
          label.form-label(for='mc-username') Minecraft Username
          input#mc-username.form-control(type='text' required)
        button.btn.btn-success(type='submit') Link Minecraft Account
